extends layout

block dashBord
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        .col-lg-12
          h1.page-header  Locations Manger
            small  Cities
          ol.breadcrumb
            li
              i.fa.fa-dashboard
              a(href='/adminPage')  Dashboard
            li.active
              i.fa  Cities
      .panel.panel-default
            .panel-heading
              .row
                .col-md-3
                  h2.panel-title 
                    strong  List of Citie
                .col-md-5
                  form(role='search')
                    .input-group
                      input.form-control(type='text', placeholder='Search by name')
                      .input-group-btn
                        button.btn.btn-default(type='submit')
                          i.glyphicon.glyphicon-search
                .col-md-2 
                  a.btn.btn-success(href='#newCitie', role='button',data-toggle='modal')
                    span.glyphicon.glyphicon-plus
                    |  Add Citie
                .col-md-2  
                  button.btn.btn-primary
                    i.glyphicon.glyphicon-print
                    |  Print 
            .panel-body
              .table-responsive
                table#user.table.table-condensed
                  thead
                    tr
                      td
                        strong Name in Arabic
                      td
                        strong Name in English
                      td.text-right
                        strong Edit
                      td.text-right
                        strong Trash 
                  tbody
                    for city in cities
                      tr(data-id='#{city.idcity}')
                        td 
                          a.editable.editable-click(id='name#{city.idcity}', href='#', data-type='text', data-pk='#{city.idcity}') #{city.name}
                        td
                          a.editable.editable-click(id='name_en#{city.idcity}',href='#', data-type='text', data-pk='#{city.idcity}') #{city.name_en}
                        td.text-right
                          button#enable.btn.btn-info.btn-xs(data-value='#{city.idcity}')
                            span.glyphicon.glyphicon-pencil
                        td.text-right
                          button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',data-value='#{city.idcity}')
                            span.glyphicon.glyphicon-trash      
          #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
            .modal-dialog
              .modal-content
                .modal-headr.modal-header
                  p.h1 Sure you want to delete?
                .modal-body
                  p.h2 Are you sure
                  p 
                .modal-footer
                  button#delete.btn.btn-danger(type='button',data-dismiss='modal') Delete
                  button.btn.btn-success(data-dismiss='modal', type='button') Cancel
          #newCitie.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
            .modal-dialog
              .modal-content
                .modal-header.text-success
                  button.close(type="button", data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") Ã— 
                  h2
                    .glyphicon.glyphicon-plus
                    |  Add Citie
                .row 
                  .modal-body
                    form#formCitie.form-signin(role="form" , action="", method="post")
                      .col-xs-5.col-xs-offset-1.col-md-5.col-md-offset-1
                        .form-group
                          .h4 Name in Arabic
                          input#nameArabic.form-control(type="text",name="nameArabic", placeholder="Name in Arabic",autofocus="")
                      .col-xs-5.col-md-5
                        .form-group      
                          .h4 Name in English
                          input#nameEnglish.form-control(type="text",name="nameEnglish", placeholder="Name in English",autofocus="")
                .modal-footer
                  button.btn.btn-danger(data-dismiss='modal', type='button') Cancel
                  button.btn.btn-primary(type="submit") Save Change 
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/metisMenu/dist/metisMenu.min.js')
  script(src='/js/sb-admin-2.js')
  script(src='/js/bootstrap-editable.min.js')
  script(src='/js/editCity.js') 
  script(src='/js/helpers.js')
  script(src='/js/adminCities.js') 

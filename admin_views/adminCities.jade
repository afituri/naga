extends layout
block Dashboard
  #page-wrapper
    .container-fluid
      .row
        .col-lg-12
          h1  Locations Manger
            small  Cities
          ol.breadcrumb
            li
              i.fa.fa-dashboard
              a(href='/adminPage')  Dashboard
            li.active
              i.fa Locations Manger
            li.active
              i.fa  Cities
          .panel.panel-default.filterable
            .panel-heading
              .row
                .col-xs-3.col-md-2
                  h3.panel-title#title
                    strong List of Cities
                .pull-right
                  button#space.btn.btn-primary.btn-filter
                    i.glyphicon.glyphicon-filter
                    |  Filter of Search
                  a#space.btn.btn-success(href='#newCitie', role='button',data-toggle='modal')
                    i.glyphicon.glyphicon-plus
                    |  Add City
                  button#space.btn.btn.btn-info
                    i.glyphicon.glyphicon-print
                    |  Print
            .table-responsive
              table#user.table.table-striped.table-condensed
                thead
                  tr.filters
                    th
                      input.form-control.text-center(type='text', placeholder='City Name in Arabic', disabled='')
                    th
                      input.form-control.text-center(type='text', placeholder='City Name in English', disabled='')
                    th.text-center
                      | Edit
                    th.text-center
                      | Trash 
                tfoot
                  tr
                    th.text-center
                      | City Name in Arabic
                    th.text-center
                      | City Name in English
                    th.text-center
                      | Edit
                    th.text-center
                      | Trash
                tbody#tbody
                  for city in cities
                    tr(data-id='#{city.idcity}')
                      td.text-center
                        a.editable.editable-click(id='name#{city.idcity}', href='#', data-type='text', data-pk='#{city.idcity}') #{city.name}
                      td.text-center
                        a.editable.editable-click(id='name_en#{city.idcity}',href='#', data-type='text', data-pk='#{city.idcity}') #{city.name_en}
                      td.text-center
                        button#enable.btn.btn-info.btn-xs(data-value='#{city.idcity}', data-placement='top', title='Edit City')
                          span.glyphicon.glyphicon-pencil
                      td.text-center
                        button#delete.btn.btn-danger.btn-xs(href='#delll', data-toggle='modal',value='#{city.idcity}')
                          span.glyphicon.glyphicon-trash      

        #delll.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-danger
                p.h1#Cityid Sure you want to delete
              .modal-body
                p.h2 Are you sure
                p
              .modal-footer
                button#deletee.btn.btn-danger(type='button',data-dismiss='modal') Delete
                button.btn.btn-success(data-dismiss='modal', type='button') Cancel
        #newCitie.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-success
                button.close(type="button", data-dismiss="modal" aria-label="Close")
                  span(aria-hidden="true") Ã— 
                h2
                  .glyphicon.glyphicon-plus
                  |  Add Citie
              .row 
                .modal-body
                  form#formCitie.form-signin(role="form",name='formCitie')
                    .col-xs-5.col-xs-offset-1.col-md-5.col-md-offset-1
                      .form-group
                        .h4 City in Arabic
                        input#name.form-control(type="text",name="name", placeholder="Name in Arabic")
                    .col-xs-5.col-md-5
                      .form-group      
                        .h4 City in English
                        input#name_en.form-control(type="text",name="name_en", placeholder="Name in English")
              .modal-footer
                button.btn.btn-danger(data-dismiss='modal', type='button') Cancel
                button#sub.btn.btn-primary Save Change 
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src="/js/jquery.validate.min.js")
  script(src='/metisMenu/dist/metisMenu.min.js')
  script(src='/js/sb-admin-2.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/adminCities.js')
  script(src='/js/bootstrap-editable.min.js')
  script(src='/js/helpers.js')
  script(src='/js/searchFilter.js') 

extends layout
block Dashboard
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        .col-lg-12
          h1.page-header  Business Manger
            small  Genre
          ol.breadcrumb
            li
              i.fa.fa-dashboard
              a(href='/adminPage')  Dashboard
            li
              i.fa  
              a(href='/adminTypeBusiness') Type of Business
            li.active
              i.fa  Genre
      .panel.panel-default
            .panel-heading
              .row
                .col-md-3
                  h2.panel-title 
                    strong  List of Genre 
                .col-md-5
                  form(role='search')
                    .input-group
                      input.form-control(type='text', placeholder='Search by name')
                      .input-group-btn
                        button.btn.btn-default(type='submit')
                          i.glyphicon.glyphicon-search
                .col-md-2 
                  a.btn.btn-success(href='#newGenre', role='button',data-toggle='modal')
                    span.glyphicon.glyphicon-plus
                    |  Add Genre 
                .col-md-2  
            .panel-body
              .table-responsive
                table.table.table-condensed
                  thead
                    tr
                      td
                        strong Name in Arabic
                      td
                        strong Name in English
                      td.text-right
                        strong View
                       td.text-right
                        strong Edit  
                      td.text-right
                        strong Trash 
                          tbody
                            for i in genre
                              tr(data-id = '#{i.idgenre}')
                                td 
                                  a.editable.editable-click(id='name#{i.idgenre}', href='#', data-type='text', data-pk='#{i.idgenre}') #{i.name}  
                                td 
                                  a.editable.editable-click(id='name_en#{i.idgenre}', href='#', data-type='text', data-pk='#{i.idgenre}') #{i.name_en}  
                                td.text-right
                                  button#view.btn.btn-primary.btn-xs(value='#{i.idgenre}',data-title='Edit', data-toggle='modal')
                                    span.glyphicon.glyphicon-eye-open
                                td.text-right
                                  button#enable.btn.btn-info.btn-xs
                                    span.glyphicon.glyphicon-pencil      
                                td.text-right 
                                  button#delete.btn.btn-danger.btn-xs(value='#{i.idgenre}',href='#del', data-toggle='modal')
                                    span.glyphicon.glyphicon-trash   
                             
          #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
            .modal-dialog
              .modal-content
                .modal-headr.modal-header-danger
                  p.h1 Sure you want to delete?
                .modal-body
                  p.h2 Are you sure
                  p 
                .modal-footer
                  button#deletee.btn.btn-danger(type='button',data-dismiss='modal') Delete
                  button.btn.btn-success(data-dismiss='modal', type='button') Cancel
          #newGenre.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
             .modal-dialog
              .modal-content
                .modal-headr.modal-header-success
                  button.close(type="button", data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") Ã— 
                  h2
                    .glyphicon.glyphicon-plus
                    |  Add Genre
                .row 
                  .modal-body
                    form#formGenre.form-signin(role="form" , action="", method="post")
                      .col-xs-5.col-xs-offset-1.col-md-5.col-md-offset-1
                        .form-group
                          .h4 Name in Arabic
                          input#name.form-control(type="text", name="name", placeholder="Name in Arabic",autofocus="")
                      .col-xs-5.col-md-5
                        .form-group      
                          .h4 Name in English
                          input#name_en.form-control(type="text", name="name_en", placeholder="Name in English",autofocus="")
                .modal-footer
                  button.btn.btn-danger(data-dismiss='modal', type='button') Cancel
                  button.btn.btn-primary(type="submit") Save Change 
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap-editable.min.js')
  script(src='/metisMenu/dist/metisMenu.min.js')
  script(src='/js/sb-admin-2.js')  
  script(src='/js/genre.js')
  script(src='/js/editgenre.js')
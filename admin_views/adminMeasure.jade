extends layout
block dashBord
  #page-wrapper
    .container-fluid
      // Page Heading Started
      .row
        h1 Product Manger
          small  Measure
        ol.breadcrumb
          li
            i.fa.fa-dashboard
            a(href='/adminPage')  Dashboard
          li.active
            i.glyphicon.glyphicon-map-marker  
            |  Product Manger
          li.active
            i.fa  Measure 
        .panel.panel-default.filterable
          .panel-heading
            .row
              .col-xs-3.col-md-2
                h3.panel-title#title
                  strong List of Measure
              .pull-right
                button#space.btn.btn-primary.btn-filter
                  i.glyphicon.glyphicon-filter
                  |  Filter of Search
                a#space.btn.btn-success(href='#newMeasure', role='button',data-toggle='modal')
                  i.glyphicon.glyphicon-plus
                  |  Add Measure
                button#space.btn.btn.btn-info
                  i.glyphicon.glyphicon-print
                  |  Print
          .table-responsive
            table.table.table-striped.table-condensed
              thead.filters
                tr
                  th
                    //- strong Name in Arabic
                    input.form-control.text-center(type='text', name='name', placeholder='Name in Arabic', disabled='')
                  th
                    //- strong Name in English
                    input.form-control.text-center(type='text', name='name_en', placeholder='Name in English', disabled='')
                  th.text-center
                    strong View
                  th.text-center
                    | Edit  
                  th.text-center
                    | Trash 
                tbody#MeasureTable
                  for o in measure
                    tr(data-id='#{o.idmeasure}')
                      td.text-center
                        a.editable.editable-click(id='name#{o.idmeasure}', href='#', data-type='text', data-pk='#{o.idmeasure}') #{o.name}
                      td.text-center
                        a.editable.editable-click(id='name_en#{o.idmeasure}', href='#', data-type='text', data-pk='#{o.idmeasure}') #{o.name_en} 
                      td.text-center
                        button#view.btn.btn-primary.btn-xs(value='#{o.idmeasure}' ,data-title='Edit', data-toggle='modal')
                          span.glyphicon.glyphicon-eye-open
                      td.text-center
                        button#enable.btn.btn-info.btn-xs(value='#{o.idmeasure}' ,data-title='Edit', data-toggle='modal')
                          span.glyphicon.glyphicon-pencil     
                      td.text-center 
                        button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal' value='#{o.idmeasure}')
                          span.glyphicon.glyphicon-trash  
        if pagination 
          div.text-center
            ul.pagination
              li(class='#{pagination.previous.disabled}')
                a(href='?p=#{pagination.previous.n}') Previous
              for page in pagination.pages
                li(class="#{page.active}")
                  a(href='?p=#{page.n}') #{page.n}
              li(class="#{pagination.next.disabled}")
                a(href='?p=#{pagination.next.n}') Next        
        #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-danger
                p.h1 Sure you want to delete?
              .modal-body
                p.h2 Are you sure
                p 
              .modal-footer
                button#dell.btn.btn-danger(type='button',data-dismiss='modal') Delete
                button.btn.btn-success(data-dismiss='modal', type='button') Cancel
        #newMeasure.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
           .modal-dialog
            .modal-content
              .modal-headr.modal-header-success
                button.close(type="button", data-dismiss="modal" aria-label="Close")
                  span(aria-hidden="true") Ã— 
                h2
                  .glyphicon.glyphicon-plus
                  |  Add Measure
              .row 
                .modal-body
                  form#formMeasure.form-signin(role="form" , action="/saveMeasure", method="post")
                    .col-xs-5.col-xs-offset-1.col-md-5.col-md-offset-1
                      .form-group
                        .h4 Name in Arabic
                        input#name.form-control(type="text", name="name", placeholder="Name in Arabic",autofocus="")
                    .col-xs-5.col-md-5
                      .form-group      
                        .h4 Name in English
                        input#name_en.form-control(type="text", name="name_en", placeholder="Name in English",autofocus="")
              .modal-footer
                button.btn.btn-danger(data-dismiss='modal', type='button') Cancel
                button.btn.btn-primary(type="submit") Save Change 
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/metisMenu/dist/metisMenu.min.js')
  script(src='/js/sb-admin-2.js')
  script(src='/js/bootstrap-editable.min.js')
  script(src='/js/adminMeasure.js')
  script(src='/js/editMeasure.js') 
  script(src='/js/adminSizes.js')
  script(src='/js/searchFilter.js') 
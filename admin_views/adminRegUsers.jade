extends layout
block Dashboard
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        h1  Users Manger
          small  Register User
        ol.breadcrumb
          li
            i.fa.fa-dashboard
            a(href='/adminPage')  Dashboard
          li.active
            i.fa  Users Manger
          li.active
            i.fa.fa-user  Register User
        // Users Register  
        .col-xs-10.col-xs-offset-1.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3.well.well-sm
          form(role='form')
            .form-group
              input.form-control#name(name='name', placeholder='Full Name', type='text', autofocus='')
            .form-group
              input.form-control#email(name='email', placeholder='Your Email', type='email')
            .form-group
              input.form-control#reEnterEmail(name='reEnterEmail', placeholder='Re-enter Email', type='email')
            .form-group
              input.form-control#password(name='password', placeholder='New Password', type='password')
            .form-group
              input.form-control#confirmPassword(name='confirmPassword', placeholder='Confirm Password', type='password')
            .form-group
              select.form-control#level(name='level',type='text')
                option(value='-1', style='color: grey; display:none;') Please Select Level
                option(value='1') Administration
                option(value='2') Seller  
            .row
              .col-xs-8.col-md-8
                button#btnSubmit.btn.btn-primary.btn-block(type='submit') Registration User 
              .col-xs-4.col-md-4
                button.btn.btn-danger.btn-block(type='reset') Cancel            
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/metisMenu/dist/metisMenu.min.js')
  script(src='/js/sb-admin-2.js')
  script(src='/js/adminRegUsers.js')

extends layout
block Dashboard
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        .col-lg-12
          h1.page-header  Company Manger
            small  Company Seller
          ol.breadcrumb
            li
              i.fa.fa-dashboard
              a(href='/adminPage')  Dashboard
            li
              i.fa
              a(href='/adminCompany')  Company  
            li.active
              i.fa  Seller
      .panel.panel-default
            .panel-heading
              .row
                .col-md-3
                  h2.panel-title 
                    strong  List of Company Seller
                .col-md-5
                  form(role='search')
                    .input-group
                      input.form-control(type='text', placeholder='Search by name')
                      .input-group-btn
                        button.btn.btn-default(type='submit')
                          i.glyphicon.glyphicon-search
                .col-md-2 
                  a.btn.btn-success(href='#newSeller', role='button',data-toggle='modal')
                    span.glyphicon.glyphicon-plus
                    |  Add Seller 
                .col-md-2  
            .panel-body
              .table-responsive
                table.table.table-condensed
                  thead
                    tr
                      td
                        strong First Name
                      td
                        strong Last Name
                      td
                        strong Email
                      td
                        strong password  
                      td
                        strong level
                      td.text-right
                        strong Edit
                      td.text-right
                        strong Trash     
                  tbody
                    // foreach ($order->lineItems as $line) or some such thing here
                    tr
                      td mohammed
                      td ali
                      td ex@gmail.com
                      td *********
                      td admin
                      td.text-right
                        button#view.btn.btn-info.btn-xs
                          span.glyphicon.glyphicon-pencil       
                      td.text-right 
                        button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal')
                          span.glyphicon.glyphicon-trash 
          #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
            .modal-dialog
              .modal-content
                .modal-headr.modal-header-danger
                  p.h1 Sure you want to delete?
                .modal-body
                  p.h2 Are you sure
                  p 
                .modal-footer
                  button#delete.btn.btn-danger(type='button',data-dismiss='modal') Delete
                  button.btn.btn-success(data-dismiss='modal', type='button') Cancel
          #newSeller.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
            .modal-dialog
              .modal-content
                .modal-headr.modal-header-success
                  button.close(type="button", data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") Ã—
                  h2
                    .glyphicon.glyphicon-plus
                    |  Add Company Seller
                .row 
                  .modal-body
                    form#formSeller.form-signin(role="form" , action="", method="post")
                      .col-xs-6.col-md-6
                        .form-group
                          .h4 First Name
                          input#first_name.form-control(type="text",name="first_name", placeholder="First Name",autofocus="")
                        .form-group
                          .h4 Email
                          input#email.form-control(type="text",name="email", placeholder="Email",autofocus="")    
                        .form-group
                          .h4 level
                          select#level.form-control(type="text",name="level", placeholder="level",autofocus="")
                      .col-xs-6.col-md-6
                        .form-group
                          .h4 Last Name
                          input#last_name.form-control(type="text",name="last_name", placeholder="Last Name",autofocus="")
                        .form-group
                          .h4 password
                          input#password.form-control(type="text",name="password", placeholder="password",autofocus="")    
                .modal-footer
                  button.btn.btn-danger(data-dismiss='modal', type='button') Cancel
                  button.btn.btn-primary(type="submit") Save Change
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/metisMenu/dist/metisMenu.min.js')
  script(src='/js/sb-admin-2.js')  
  script(src='/js/CompanyAddress.js')
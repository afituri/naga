  script(src="/js/bootstrap-switch.min.js")
  script(src='/js/bootstrap-select.min.js')
  script.
    $("[name='discount_flag']").bootstrapSwitch('state', false);
    $("[name='genre_flag']").bootstrapSwitch('state', false);
    $(document).ready(function(){
      $("[name='discount_flag']").on('switchChange.bootstrapSwitch', function (e, data) {
        var state=$(this).bootstrapSwitch('state');
        if(state)
        {
          $("#Hide").show(400); //-.addClass('animated fadeInDown');
          $("#Hide1").show(400);//- .addClass('animated fadeInDown');
        }
        else
        {
          $("#Hide").hide(400);//-.addClass('animated fadeInUp');
          $("#Hide1").hide(400);//- .addClass('animated fadeInUp');
        }
      });
      $("[name='genre_flag']").on('switchChange.bootstrapSwitch', function (e, data) {
        var state=$(this).bootstrapSwitch('state');
        if(state)
        {
          $("#HideGenre").show(400); //-.addClass('animated fadeInDown');
        }
        else
        {
          $("#HideGenre").hide(400);//-.addClass('animated fadeInUp');
        }
      });
      
      $('#genre_idSize').on('change', function () {
        var id = $('#genre_idSize').val();
        if(id == 1) {
          $("#HideSML").hide(400); //-.addClass('animated fadeInDown');
          $("#HideSizeXL").show(400); //-.addClass('animated fadeInDown');
        }
        if(id == 2) {
          $("#HideSizeXL").hide(400); //-.addClass('animated fadeInDown');
          $("#HideSML").show(400); //-.addClass('animated fadeInDown');
        }
      });

      $('#small :checkbox').click(function() {
        var $this = $(this);
        // $this will contain a reference to the checkbox   
        if ($this.is(':checked')) {
            $("#small .col-md-6").append("<div class='row'><div id='SQuantity' class='col-xs-6 col-xs-offset-2'><input class='form-control' placeholder='MM' type='text'></div></div>")
        } else {
            $("#small #SQuantity").remove();
        }
      });

      $('#mediam :checkbox').click(function() {
        var $this = $(this);
        // $this will contain a reference to the checkbox   
        if ($this.is(':checked')) {
            $("#mediam .col-md-6").append("<div class='row'><div id='MQuantity' class='col-xs-6 col-xs-offset-2'><input class='form-control' placeholder='MM' type='text'></div></div>")
        } else {
            $("#mediam #MQuantity").remove();
        }
      });

      $('#large :checkbox').click(function() {
        var $this = $(this);
        // $this will contain a reference to the checkbox   
        if ($this.is(':checked')) {
            $("#large .col-md-6").append("<div class='row'><div id='LQuantity' class='col-xs-6 col-xs-offset-2'><input class='form-control' placeholder='MM' type='text'></div></div>")
        } else {
            $("#large #LQuantity").remove();
        }
      });
    });

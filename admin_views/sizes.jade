block dashBord
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        h1  Product Manger
          small  Sizes
        ol.breadcrumb
          li
            i.fa.fa-dashboard
            a(href='/adminPage')  Dashboard
          li
            i.fa  
            a(href='/adminMeasure')  Measure
          li.active
            i.fa  Sizes 
          //- .panel.panel-default

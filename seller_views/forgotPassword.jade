extends layout
block content
  .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    a(href="/adminLogin")
      img.img-responsive(src="../img/nagaLogo1.png")
    .panel.panel-warning    
      .panel-body
        h3#Login Forgot Your Password?
        h5#forgpass
          | After you provide the information requested below, Trend Micro will send a message explaining how to reset your password.
        #forgot_pwd
          .form_container
            form#loginn(name='form_forgot')
              .col-md-6.col-md-offset-1
                .form-group
                  h5#h5-warning Plesa Enter Your Email address:
              .col-md-10.col-md-offset-1    
                .form-group
                  input#email.textfield(name='email', value='', maxlength='200', type='email',placeholder="Your Email") 
                .form-group.internal
                  button.col-md-3.col-md-offset-1#Loginbt(name='button', type='submit') Retrieve
                   



                 

